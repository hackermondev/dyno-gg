{
	"compileOnSave": false,
    "compilerOptions": {
        "moduleResolution": "Node",
        "module": "commonjs",
        "outDir": "./build",
        "lib": [
            "es2017"
        ],
        "types": [
			"jest",
            "node",
            "reflect-metadata"
		],
        "experimentalDecorators": true,
		"emitDecoratorMetadata":  true,
		"forceConsistentCasingInFileNames": true,
        "pretty":                 true,
        "target":                 "ES2017",
        "noImplicitAny":          false,
        "sourceMap":              true,
        "skipLibCheck":           true,
        "allowJs":                true,
        "disableSizeLimit":       true
    },
    "include": [
		"src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
